<Project>
  <PropertyGroup>
    <DefaultItemExcludes>$(DefaultItemExcludes);$(SolutionDir)_build_/**</DefaultItemExcludes>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <BuildPath>$(SolutionDir)_build_\$(Platform)_$(Configuration)\</BuildPath>
    <MSBuildProjectExtensionsPath>$(BuildPath)_nuget_\$(MSBuildProjectName)\</MSBuildProjectExtensionsPath>
    <OutputPath>$(BuildPath)$(MSBuildProjectName)\</OutputPath>
    <IntermediateOutputPath>$(OutputPath)obj\</IntermediateOutputPath>
  </PropertyGroup>
</Project>
